<h1>All Creatures</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

  <% @creatures.each do |creature| %>
    <tr>
      <td><%= creature.name %></td>
      <td><%= link_to 'Show', creature_path(creature) %></td>
      <td><%= link_to 'Edit', edit_creature_path(creature) %></td>
      <td><%= link_to 'Destroy', creature_path(creature),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Create a Creature', new_creature_path %> |
<%= link_to 'Home', root_url %>

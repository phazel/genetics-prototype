<h1>New Creature</h1>

<%= form_for :creature, url: creatures_path do |c| %>
  <p>
    <%= c.label :name %><br>
    <%= c.text_field :name %>
  </p>

  <p>
    <%= c.label :text %><br>
    <%= c.text_area :text %>
  </p>

  <p>
    <%= c.submit %>
  </p>
<% end %>

<%= link_to 'Back', creatures_path %>
